<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRegister"
    android:background="@drawable/auth_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextLogin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="280dp"
                android:background="@drawable/auth_login"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:inputType="textPersonName"
                android:paddingStart="80dp"
                android:hint="Ivanov.I"/>
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/register_email"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:inputType="textPersonName"
                android:paddingStart="80dp"
                android:hint="Ivanov@mail.com"/>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/auth_pass"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:inputType="textPassword"
                android:paddingStart="80dp" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/auth_pass"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:inputType="textPassword"
                android:paddingStart="80dp" />


            <Button
                android:id="@+id/buttonSubmitSignUp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#4254BC"
                android:fontFamily="@font/ubuntu_bold"
                android:text="SIGN UP"
                app:cornerRadius="0dp" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>